<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
  <!-- Payment Method Facade configuration -->
  <virtualType name="QwicpayOneGatewayFacade" type="Magento\Payment\Model\Method\Adapter">
    <arguments>
      <argument name="code" xsi:type="const">\Qwicpay\Checkout\Model\Ui\ConfigProvider::CODE</argument>
      <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
      <argument name="infoBlockType" xsi:type="string">Qwicpay\Checkout\Block\Info</argument>
      <argument name="valueHandlerPool" xsi:type="object">QwicpayOneGatewayValueHandlerPool</argument>
      <argument name="commandPool" xsi:type="object">QwicpayOneGatewayCommandPool</argument>
    </arguments>
  </virtualType>

  <!-- Configuration reader -->
  <virtualType name="QwicpayOneGatewayConfig" type="Magento\Payment\Gateway\Config\Config">
    <arguments>
      <argument name="methodCode" xsi:type="const">\Qwicpay\Checkout\Model\Ui\ConfigProvider::CODE</argument>
    </arguments>
  </virtualType>

  <!-- Commands -->
  <virtualType name="QwicpayOneGatewayCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
    <arguments>
      <argument name="commands" xsi:type="array">
        <item name="capture" xsi:type="string">QwicpayOneGatewayCaptureCommand</item>
        <item name="authorize" xsi:type="string">QwicpayOneGatewayCaptureCommand</item>
        <item name="redirect" xsi:type="string">QwicpayOneGatewayRedirectCommand</item>
      </argument>
    </arguments>
  </virtualType>

  <virtualType name="QwicpayOneGatewayCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
    <arguments>
      <argument name="requestBuilder" xsi:type="object">Qwicpay\Checkout\Gateway\Request\RedirectRequest</argument>
      <argument name="handler" xsi:type="object">QwicpayOneGatewayResponseHandlerComposite</argument>
      <argument name="validator" xsi:type="object">QwicpayOneGatewayResponseValidator</argument>
      <argument name="client" xsi:type="object">QwicpayClientWithLogger</argument>
    </arguments>
  </virtualType>

  <virtualType name="QwicpayOneGatewayRedirectCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
    <arguments>
      <argument name="requestBuilder" xsi:type="object">Qwicpay\Checkout\Gateway\Request\RedirectRequest</argument>
      <argument name="handler" xsi:type="object">QwicpayOneGatewayResponseHandlerComposite</argument>
      <argument name="validator" xsi:type="object">QwicpayOneGatewayResponseValidator</argument>
      <argument name="client" xsi:type="object">QwicpayClientWithLogger</argument>
    </arguments>
  </virtualType>

  <!-- Virtual type to inject the logger into the client -->
  <virtualType name="QwicpayClientWithLogger" type="Qwicpay\Checkout\Gateway\Http\Client\QwicpayClient">
    <arguments>
        <argument name="logger" xsi:type="object">Psr\Log\LoggerInterface</argument>
    </arguments>
  </virtualType>

  <!-- Request builders -->
  <virtualType name="QwicpayOneGatewayRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
    <arguments>
      <argument name="builders" xsi:type="array">
        <item name="capture" xsi:type="string">Qwicpay\Checkout\Gateway\Request\CaptureRequest</item>
      </argument>
    </arguments>
  </virtualType>
  <type name="Qwicpay\Checkout\Gateway\Request\RedirectRequest">
    <arguments>
      <argument name="urlBuilder" xsi:type="object">Magento\Framework\UrlInterface</argument>
      <argument name="checkoutSession" xsi:type="object">Magento\Checkout\Model\Session</argument>
    </arguments>
  </type>

  <!-- Response handlers -->
  <virtualType name="QwicpayOneGatewayResponseHandlerComposite" type="Magento\Payment\Gateway\Response\HandlerChain">
    <arguments>
      <argument name="handlers" xsi:type="array">
        <item name="redirect" xsi:type="string">Qwicpay\Checkout\Gateway\Response\RedirectHandler</item>
        <item name="txnid" xsi:type="string">Qwicpay\Checkout\Gateway\Response\TxnIdHandler</item>
        <item name="fraud" xsi:type="string">Qwicpay\Checkout\Gateway\Response\FraudHandler</item>
      </argument>
    </arguments>
  </virtualType>

  <!-- Validators -->
  <virtualType name="QwicpayOneGatewayResponseValidator" type="Magento\Payment\Gateway\Validator\ValidatorComposite">
    <arguments>
      <argument name="validators" xsi:type="array">
        <item name="response_code" xsi:type="string">Qwicpay\Checkout\Gateway\Validator\ResponseCodeValidator</item>
      </argument>
    </arguments>
  </virtualType>
  <type name="Qwicpay\Checkout\Gateway\Validator\ResponseCodeValidator">
    <arguments>
      <argument name="resultFactory" xsi:type="object">Magento\Payment\Gateway\Validator\ResultInterfaceFactory</argument>
    </arguments>
  </type>

  <!-- Value handlers infrastructure -->
  <virtualType name="QwicpayOneGatewayValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
    <arguments>
      <argument name="handlers" xsi:type="array">
        <item name="default" xsi:type="string">QwicpayOneGatewayConfigValueHandler</item>
      </argument>
    </arguments>
  </virtualType>
  <virtualType name="QwicpayOneGatewayConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
    <arguments>
      <argument name="configInterface" xsi:type="object">QwicpayOneGatewayConfig</argument>
    </arguments>
  </virtualType>
</config>
